{
  "expo": {
    "name": "DogWearable",
    "slug": "dogwearable",
    "scheme": "dogwearable",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.madelbrot.dogwearable",
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect to your dog wearable.",
        "NSBluetoothPeripheralUsageDescription": "Bluetooth is required to read heart rate.",
        "NSLocationWhenInUseUsageDescription": "Bluetooth scanning may require location access.",
        "NSMicrophoneUsageDescription": "This app uses the microphone to detect dog vocalizations on-device."
      }
    },
    "android": {
      "package": "com.madelbrot.dogwearable",
      "permissions": [
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1",
            "newArchEnabled": false
          },
          "android": {
            "newArchEnabled": false
          }
        }
      ],
      "expo-router"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bf9e483c-1c8c-4f5b-a0cc-5e46da142644"
      }
    }
  }
}
